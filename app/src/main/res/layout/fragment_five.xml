<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/beg"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.v7.widget.CardView
            android:divider="@android:color/transparent"
            android:elevation="8dp"
            app:cardMaxElevation="8dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/android_card_view_example"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            tools:targetApi="lollipop">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_alignLeft="@+id/android_card_view_example">

                <TextView
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/colorAccent2"
                    android:gravity="center_horizontal"
                    android:id="@+id/cardview_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="120dp"
                    android:paddingBottom="5dp"
                    android:text="Hadits Larangan Berbuat Kerusakan"
                    android:textSize="24sp" />

                <TextView
                    android:fontFamily="@font/open_sans"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:id="@+id/hadits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hadits2"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="27dp"
                    android:text="@string/Arti5"
                    android:textColor="@color/colorAccent2" />

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/hadits2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview_list_title"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:text="@string/Hadits5"
                    android:textColor="@color/colorAccent2"
                    android:textColorHighlight="@color/colorPrimaryDark"
                    android:textSize="32sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</RelativeLayout>